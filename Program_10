Switch Case: Calaculator app

Code: 
#include <stdio.h>
#include <conio.h>

void main() {
   int num1, num2;
   char op;

   printf("enter num1:");
   scanf("%d",&num1);

   printf("enter num2:");
   scanf("%d",&num2);

   printf("enter op:");
   scanf("%c",&op);

   switch(op) {
       case '+':
           printf("Sum:",num1+num2);
           break;
       case ' ':
           printf("Diff:",num1-num2);
           break;
       case ' ':
           printf("Quo:",num1/num2);
           break;
       case ' ':
           printf("Pro:",num1*num2);
           break;
       default:
          printf("Invalid Operator");
    }
}
