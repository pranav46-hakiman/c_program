Program 22: Addition of matrix.

#include <stdio.h>

void main(){
    int i, j, arr1[2][2], arr2[2][2];
    for (i=0; i<2; i++){
        for (j=0; j<2; j++){
            printf("enter element:");
            scanf("%d",&arr1[i][j]);
        }printf("\n");
    }
    printf("Next array: 2");
    for (i=0; i<2; i++){
        for (j=0; j<2; j++){
            printf("enter element:");
            scanf("%d",&arr2[i][j]);
        }
    }printf("\n");
     for (i=0; i<2; i++){
        for (j=0; j<2; j++){
            printf(" %d \n",arr1[i][j] + arr2[i][j]);
        }}
}
